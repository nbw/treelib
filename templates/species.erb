<html>
<head>
	<title>Species: <%= @page_data[:species][:name] %></title>
    <meta property="og:url"           content="http://treelib.ca/species/<%= @page_data[:species][:name].gsub(" ","_") %>" />
    <meta property="og:type"          content="website" />
    <meta property="og:title"         content="TreeLib Species: <%= @page_data[:species][:name] %>" />
    <meta property="og:description"   content="A collection of high-quality tree photographs for educators, students and lay persons." />
    <% if @page_data[:species][:photos] %>
    <meta property="og:image"         content="<%= @page_data[:species][:photos][rand(@page_data[:species][:photos].length)][:thumb] %>" />
    <% end %>
    <link rel='shortcut icon' href='/img/favicon.ico' type='image/x-icon'/ >
	<link href="https://fonts.googleapis.com/css?family=Roboto:400,400i,700" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/css/species_page.css">
</head>
<body>
	<div class="mainContainer">
        <div id="app"></div>
    </div>
    <script type="text/javascript">
        window.pageData = <%= @page_data.to_json %>;
    </script>
	<script src="/js/autres.bundle.js"></script> 
    <script src="/js/species_page.js"></script>
</body>
</html>